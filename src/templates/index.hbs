<!DOCTYPE html>
<html lang="en">

{{> header }}

<div id="themer-container">
  <label for="themes">Choose a theme:</label>
  <select name="themes" id="themer" title="Modify the theme of this website">
    <option value="rivet-dark">rivet-dark</option>
    <option value="night-sky-dark">night-sky-dark</option>
    <option value="solarized-light">solarized-light</option>
    <option value="green-as-a-whistle-dark">green-as-a-whistle-dark</option>
  </select>
</div>

<body id="themeable" class="rivet-dark">
  <section id="heading">
    <hgroup>
      <h1>{{basics.name}}</h1>
      <h2>{{basics.label}}</h2>
      <hr />
    </hgroup>
  </section>
  <section id="about">
    <h3>About</h3>
    {{basics.summary}}
    <hr />
  </section>
  <section id="work">
    <h3>Work</h3>
    {{#each work}} {{> work this}} {{/each}}
  </section>
  <section id="education">
    <h3>Education</h3>
    {{#each education}} {{> education this}} {{/each}}
  </section>
  <section id="skills">
    <h3>Skills</h3>
    {{#each skills}} {{> skills this}} {{/each}}
  </section>
  <section id="languages">
    <h3>Languages</h3>
    {{#each languages}} {{> languages this}} {{/each}}
  </section>
  <section id="interests">
    <h3>Interests</h3>
    {{#each interests}} {{> interests this}} {{/each}}
  </section>
</body>

</html>